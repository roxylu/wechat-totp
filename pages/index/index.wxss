/* pages/index/index.wxss */
#wrapper {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0
}

.fix-bottom {
    position: fixed;
    bottom: 0;
    width: 750rpx
}

.code-card {
    display: flex;
    flex-flow : column nowrap;
    margin : 0 15px 15px 15px;
    padding : 15px 15px 15px 15px;
    box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
    background: white;
}

.code-row {
    color : #34495E;
    font-size: 55px;
}

.bottom-row {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-around;
    align-items: center;
    height: 45px;
    background: white;
}

